@model Texxtoor.DataModels.Models.Author.Invoice
@using (Html.BeginForm("EditInvoice", "Team", new { area = "AuthorPortal" }, FormMethod.Post, new { id = "editInvoiceForm" })) {
  using(Html.BtFieldset(Loc("legendGrp", @"Edit Invoice"))) {
    @Html.LabelFor(m => m.Text)
    <div class="editor-field">
      @Html.TextBoxFor(m => m.Text)
      @Html.ValidationMessageFor(m => m.Text)
    </div>
    @Html.LabelFor(m => m.DueDays)
    <div class="editor-field">
      @Html.TextAreaFor(m => m.DueDays)
    </div>
    @Button.FormSendButtons("createInvoiceSendButton", ViewResources.Action_Team_BillingEditInvoice, "createInvoiceCancelButton", ViewResources.Button_CancelAndClose)
  }
}