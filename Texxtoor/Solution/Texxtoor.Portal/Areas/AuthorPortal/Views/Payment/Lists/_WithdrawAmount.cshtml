@model Texxtoor.DataModels.Models.Users.Account
@using (Html.BeginForm("WithdrawAmount", "Payment", new { area = "AuthorPortal" }, FormMethod.Post, new { id = "WithdrawForm" })) {
  using(Html.BtFieldset(Loc("legend", "How much amount you want to Withdraw?"))) {
    <label>@Loc("lblAmnt", "Your current credit amount is ")</label>
    <div class="editor-field"><em>@Model.Amount</em> &euro;</div>
    @Html.LabelFor(m => m.Amount)
    <div class="editor-field">
      @Html.EditorFor(m => m.Amount)
      @Html.ValidationMessageFor(m => m.Amount)
    </div>
    @Button.FormSendButtons("WithdrawAmountSendButton", ViewResources.Action_Payment_Withdraw, "WithdrawAmountCancelButton", ViewResources.Button_CancelAndClose)
  }
}
