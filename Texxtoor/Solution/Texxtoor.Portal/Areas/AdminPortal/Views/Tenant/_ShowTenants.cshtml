@model IEnumerable<Texxtoor.DataModels.Models.Users.Tenant>
<table>
  <tr>
    <th>Name
    </th>
    <th>Description
    </th>
    <th>Number of Users
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model) {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.Name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Description)
      </td>
      <td>
        @(item.Users == null ? 0 : item.Users.Count())
      </td>
      <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
        @Html.ActionLink("Templates", "Index", "Template", new { area="AdminPortal", id = item.Id }, null)
      </td>
    </tr>
  }

</table>
