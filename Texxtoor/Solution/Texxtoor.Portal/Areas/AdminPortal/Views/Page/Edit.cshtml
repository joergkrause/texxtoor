@model Texxtoor.DataModels.Models.Cms.CmsPage

@{
  PageData["Title"] = "Edit Page";
  Layout = Url.GetGlobalLayout("_LayoutAdmin", "AdminPortal");
}

<script src="~/Scripts/jquery/jquery.validate.js" type="text/javascript"></script>
<script src="~/Scripts/jquery/jquery.validate.unobtrusive.js" type="text/javascript"></script>

@using (Html.BeginForm()) {
  @Html.ValidationSummary(true)
  @Html.AntiForgeryToken()
  using (Html.BtFieldset("Edit Page Properties")) {

    <div class="editor-label">
      @Html.LabelFor(model => model.SeoTitle)
    </div>
    <div class="editor-field">
      @Html.EditorFor(model => model.SeoTitle)
      @Html.ValidationMessageFor(model => model.SeoTitle)
    </div>

    <div class="editor-label">
      @Html.LabelFor(model => model.PageTitle)
    </div>
    <div class="editor-field">
      @Html.EditorFor(model => model.PageTitle)
      @Html.ValidationMessageFor(model => model.PageTitle)
    </div>

    <div class="editor-label">
      @Html.LabelFor(model => model.Alias)
    </div>
    <div class="editor-field">
      @Html.EditorFor(model => model.Alias)
      @Html.ValidationMessageFor(model => model.Alias)
    </div>

    <div class="editor-label">
      @Html.LabelFor(model => model.PageContent)
    </div>
    <div class="editor-field">
      @Html.TextAreaFor(model => model.PageContent, 10, 60, null)
      @Html.ValidationMessageFor(model => model.PageContent)
    </div>

    <div class="editor-label">
      @Html.LabelFor(model => model.MetaDescription)
    </div>
    <div class="editor-field">
      @Html.EditorFor(model => model.MetaDescription)
      @Html.ValidationMessageFor(model => model.MetaDescription)
    </div>

    <div class="editor-label">
      @Html.LabelFor(model => model.MetaKeywords)
    </div>
    <div class="editor-field">
      @Html.EditorFor(model => model.MetaKeywords)
      @Html.ValidationMessageFor(model => model.MetaKeywords)
    </div>

    <div class="editor-label">
      @Html.LabelFor(model => model.LocaleId)
    </div>
    <div class="editor-field">
      @Html.EditorFor(model => model.LocaleId)
      @Html.ValidationMessageFor(model => model.LocaleId)
    </div>

    @Html.HiddenFor(model => model.Id)
    <div class="formsendButtons">
      <button type="submit" class="btn btn-sm btn-primary">Save Page</button>
      @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-default" })
    </div>

  }
}
