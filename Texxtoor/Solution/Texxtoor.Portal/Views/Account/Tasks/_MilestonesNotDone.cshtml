@model Texxtoor.ViewModels.Shared.Users.Account.Tasks
@if (Model.MilestonesNotDone.Any()) {
  <ul class="list-unstyled list-striped">
    @foreach (var ms in Model.MilestonesNotDone) {
      <li>@ms.Name (@ms.DateDue.ToShortDateString()) @Html.ActionLink(ViewResources.Action_Opus_FinishMilestone, "FinishMilestone", "Opus", new { Id = ms.Opus.Id, area = "AuthorPortal" }, new { @class = "pull-right" })</li>
    }
  </ul>
} else {
  <div class="alert alert-danger">
    @Loc("noMs", "There are no milestones you're currently responsible for.")
  </div>
}
