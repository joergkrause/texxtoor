@model int?
<div class="editor-mood">
  <table style="width: 100%; background-color: transparent;">
    <tr>
      <td style="text-align: center"><b>@BtIcon.IconHtml(BtIcon.MinusSignAlt)</b></td>
      <td style="text-align: center"><b>@BtIcon.IconHtml(BtIcon.Frown)@BtIcon.IconHtml(BtIcon.Frown)</b></td>
      <td style="text-align: center"><b>@BtIcon.IconHtml(BtIcon.Frown)</b></td>
      <td style="text-align: center"><b>@BtIcon.IconHtml(BtIcon.Question)</b></td>
      <td style="text-align: center"><b>@BtIcon.IconHtml(BtIcon.Smile)</b></td>
      <td style="text-align: center"><b>@BtIcon.IconHtml(BtIcon.Smile)@BtIcon.IconHtml(BtIcon.Smile)</b></td>
    </tr>
