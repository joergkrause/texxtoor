      <td style="text-align: center"><input type="radio" id="mood-4" name="mood" value="4" @(Model.GetValueOrDefault() == 4 ? "checked='checked'" : "") /></td>
      <td style="text-align: center"><input type="radio" id="mood-5" name="mood" value="5" @(Model.GetValueOrDefault() == 5 ? "checked='checked'" : "") /></td>
    </tr>
  </table>
  @Create.FieldHelpIcon(ViewData.ModelMetadata.Description, ViewData.ModelMetadata.DisplayName, ViewData.ModelMetadata.PropertyName)
</div>