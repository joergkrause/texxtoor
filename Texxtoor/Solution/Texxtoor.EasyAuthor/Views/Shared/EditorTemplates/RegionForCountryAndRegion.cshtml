@model string
@{
  var countryProperty = (string)ViewData.ModelMetadata.AdditionalValues["CountryProperty"];
}
<script>
  $(document).on('change', '[name="@countryProperty"]', function () {
    getRegions($(this).val(), '@ViewData.ModelMetadata.PropertyName', '@Model');
  });
  $(function () { getRegions($('[name="@countryProperty"]').val(), '@ViewData.ModelMetadata.PropertyName', '@Model'); });
</script>
<select id="@ViewData.ModelMetadata.PropertyName" name="@ViewData.ModelMetadata.PropertyName"></select>
@Create.FieldHelpIcon(ViewData.ModelMetadata.Description, ViewData.ModelMetadata.DisplayName, ViewData.ModelMetadata.PropertyName)